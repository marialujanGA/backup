<%# mongo web SDK %>
<script src="https://unpkg.com/realm-web/dist/bundle.iife.js"></script>

<script>

// obtener datos de url
const currentURL = window.location.href
const pathArray = currentURL.split('/');
const idCourse = pathArray[4];
const homePath = pathArray[2];
const idQuiz = pathArray[6];


// iniciar Realm de MongoDB
const app = new Realm.App({ id: "data-esbic" });
const credentials = Realm.Credentials.anonymous();
const user = app.logIn(credentials);
// console.assert(user.id === app.cirrentUser.id);
const mongo = app.currentUser.mongoClient("Cluster0");
const collection = mongo.db("rails_mongo_admin_encuestas").collection("users");

// IDs para encuestas segun lenguajes e instancia
let idiomasInitial = {
    ENG: 'h2zxp1yW',
    ESP: '',
    POR: ''
}

let idiomasExit = {
    ENG: 'uBAsoKRR',
    ESP: '',
    POR: ''
}


const comprobarUbicacion = () => {
    // comprobar si está en el quiz que corresponde a initial o exit survey
    fetch(`https://${homePath}/api/v1/courses/${idCourse}/quizzes/${idQuiz}`)
    .then((response) => {
        return response.json();
    }).then((quiz) => {
        const quizTitle = quiz.title
        const resultadoInicial = /initial.survey.quiz/i.test(quizTitle)
        const resultadoFinal = /final.survey.quiz/i.test(quizTitle)
        if (resultadoInicial) {
            console.log("inicial")
            mostrarEncuestaInicial()
        } else if (resultadoFinal) {
            console.log("final")
            mostrarEncuestaFinal()
        }

    })
}



const mostrarEncuestaInicial = () => {

    // obtener datos del curso
    fetch(`https://${homePath}/api/v1/courses/${idCourse}`)
        .then((response) => {
            return response.json();
        })
        .then((course) => {
            // obtener datos del usuario
            fetch('/api/v1/users/self/profile')
                .then((response) => {
                    return response.json();
                }).then((profile) => {
                    // buscar usuario en Mongo
                    const resultado = collection.findOne({sis_id: profile.sis_user_id, course_code: course.course_code, $or: [{initial_active: false}, {initial_answered: true}]});
                    console.log("done");
                    resultado.then((response) => {
                        if (response !== null) {
                            // si ya esta en BD
                            console.log(response)

                        } else {
                            let idioma = course.course_code.split('-')[1]
                            // si no está en Mongo: crear ventana pop up con encuesta. codigo en https://github.com/Typeform/embed/tree/main/packages/embed
                            const { open, close, toggle, refresh } = window.tf.createPopup(idiomasInitial[idioma], {open: 'load', autoClose:'2000', 
                            hidden: {user_name: profile.name, user_email: profile.primary_email, user_sis_id: profile.sis_user_id, course_code: course.course_code, course_name: course.name, course: course.course_code.split('-')[0], course_language: course.course_code.split('-')[1], course_period: course.course_code.split('-')[3], course_cycle: course.course_code.split('-')[2], survey_instance: 'initial'},
                            onSubmit: () => {collection.updateOne({name: profile.name, email: profile.primary_email, sis_id: profile.sis_user_id, university: "XPRO", course_code: course.course_code}, {$set: {initial_active: false, initial_answered: true, midterm_active: true, exit_active: true}}, {upsert: true})
                            console.log("inserto en BD")}
                            // agregar docuemnto a BD Mongo
                            })
                        }
                    })
  
                });
        });
};


const mostrarEncuestaFinal = () => {

// obtener datos del curso
fetch(`https://${homePath}/api/v1/courses/${idCourse}`)
    .then((response) => {
        return response.json();
    })
    .then((course) => {
        // obtener datos del usuario
        fetch('/api/v1/users/self/profile')
            .then((response) => {
                return response.json();
            }).then((profile) => {
                // buscar usuario en Mongo
                const resultado = collection.findOne({sis_id: profile.sis_user_id, course_code: course.course_code, $or: [{final_active: false}, {final_answered: true}]});
                console.log("done");
                resultado.then((response) => {
                    if (response !== null) {
                        // si ya esta en BD
                        console.log(response)

                    } else {
                        let idioma = course.course_code.split('-')[1]
                        // si no está en Mongo: crear ventana pop up con encuesta. codigo en https://github.com/Typeform/embed/tree/main/packages/embed
                        const { open, close, toggle, refresh } = window.tf.createPopup(idiomasExit[idioma], {open: 'load', autoClose:'2000', 
                        hidden: {user_name: profile.name, user_email: profile.primary_email, user_sis_id: profile.sis_user_id, course_code: course.course_code, course_name: course.name, course: course.course_code.split('-')[0], course_language: course.course_code.split('-')[1], course_period: course.course_code.split('-')[3], course_cycle: course.course_code.split('-')[2], survey_instance: 'final'},
                        onSubmit: () => {collection.updateOne({name: profile.name, email: profile.primary_email, sis_id: profile.sis_user_id, university: "XPRO", course_code: course.course_code}, {$set: {exit_active: false, exit_answered: true}}, {upsert: true})
                        console.log("inserto en BD")}
                        // agregar docuemnto a BD Mongo
                        })
                    }
                })

            });
    });
};


window.addEventListener('load', comprobarUbicacion());

</script>


